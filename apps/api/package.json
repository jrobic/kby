  "scripts": {
    "prebuild": "rm -rf dist",
    "schema": "ts-node scripts/createSchema.ts || true",
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch --preserveWatchOutput",
    "dev:debug": "nest start --debug --watch --preserveWatchOutput",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "TIMING=1 eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:hook": "jest --lastCommit --silent",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@nestjs/common": "8.2.4",
    "@nestjs/config": "1.1.5",
    "@nestjs/core": "8.2.4",
    "@nestjs/graphql": "9.1.2",
    "@nestjs/platform-express": "8.2.4",
    "@nestjs/platform-fastify": "8.2.4",
    "apollo-server-fastify": "^3.5.0",
    "graphql": "15.8.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.1"
  },
  "devDependencies": {
    "@kby/scripts": "workspace:*",
    "@nestjs/cli": "8.1.6",
    "@nestjs/schematics": "8.0.5",
    "@nestjs/testing": "8.2.4",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.17",
    "@types/supertest": "2.0.11",
    "fast-glob": "3.2.7",
    "source-map-support": "0.5.21",
    "supertest": "6.1.6",
    "ts-loader": "9.2.6",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.4"
  }
}
