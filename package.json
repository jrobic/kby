{
  "name": "kanban-board",
  "version": "0.0.0",
  "private": true,
  "author": "Jonathan Robic <hello@jonathanrobic.fr>",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clean": "turbo run clean",
    "clean:npm": "find . -maxdepth 3 -iname \"node_modules\" | xargs rm -rf",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "test": {
        "outputs": [
          "coverage/**"
        ],
        "dependsOn": []
      },
      "dev": {
        "cache": false
      },
      "clean": {
        "cache": false
      }
    }
  },
  "engines": {
    "pnpm": ">=6.9.0",
    "node": ">=14.0.0"
  },
  "license": "MIT"
}
